{
  "name": "secretguard-core",
  "version": "0.1.0",
  "description": "Client-side sensitive data detection and masking library",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./worker": "./dist/worker.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/worker.ts --format cjs,esm --dts",
    "test": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "privacy",
    "security",
    "pii",
    "masking",
    "redaction"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {}
}

