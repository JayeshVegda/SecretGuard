{
  "name": "secretguard",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:web": "npm run build:core && npm run build --workspace=apps/vibegard-web",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev": "npm run build:core && npm run dev --workspace=apps/vibegard-web",
    "build:core": "npm run build --workspace=packages/vibegard-core",
    "predev": "npm run build:core"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
